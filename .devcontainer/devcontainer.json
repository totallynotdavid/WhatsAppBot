{
	"name": "Ubuntu 22.02",
	"build": {
		"dockerfile": "Dockerfile",
		"args": { "VARIANT": "jammy" }
	},
	"features": {
    "ghcr.io/devcontainers-contrib/features/jshint:2": {}
  },
	"customizations": {
		"vscode": {
			"extensions": [
				"CoderCoder.codercoder-dark-theme",
				"analytic-signal.preview-pdf",
				"esbenp.prettier-vscode",
				"dbaeumer.vscode-eslint",
				"mgmcdermott.vscode-language-babel",
				"GitHub.copilot-nightly",
				"GitHub.copilot-labs",
				"ms-azuretools.vscode-docker"
			]
		}
	},
	"remoteUser": "vscode",
	"hostRequirements": {
		"cpus": 4,
		"memory": "8gb",
		"storage": "32gb"
 	},
	"postCreateCommand": "sudo apt-get update && sudo apt-get install -y upgrade && sudo /workspaces/WhatsAppBot/util/install-dependencies.sh"
}
